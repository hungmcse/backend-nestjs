{
	"name": "simple_app",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"license": "MIT",
	"scripts": {
		"tsc-devtool": "tsc -p ./devtools/tsconfig.json",
		"build": "tsc -p tsconfig.build.json",
		"tsc": "tsc --sourceRoot $BACKEND_SOURCE_ROOT -p tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test": "jest --config ./test/jest.config.ts",
		"trans-core": "NODE_PRESERVE_SYMLINKS=1 i18next --config ./core/i18next-parser.config.js",
		"logs": "./node_modules/.bin/pm2 logs --raw | pino-pretty -c -t SYS:standard",
		"start:dev": "pm2 kill && pm2 startOrReload app.config.js --update-env"
	},
	"dependencies": {
		"@nestjs/common": "7.4.2",
		"@nestjs/config": "0.2.4",
		"@nestjs/core": "7.4.2",
		"@nestjs/jwt": "^7.1.0",
		"@nestjs/microservices": "^7.6.1",
		"@nestjs/passport": "^8.0.1",
		"@nestjs/platform-fastify": "^7.4.2",
		"@nestjs/schedule": "^0.4.1",
		"@nestjs/typeorm": "7.1.0",
		"@pm2/io": "^4.3.2",
		"@types/accepts": "^1.3.5",
		"@types/form-data": "^2.2.1",
		"@types/helmet": "0.0.43",
		"@types/json-schema": "^7.0.3",
		"@types/module-alias": "^2.0.0",
		"@types/multer": "^1.3.7",
		"@types/passport": "^1.0.7",
		"@types/passport-jwt": "^3.0.1",
		"@types/pino": "^5.8.11",
		"@types/uuid": "^3.4.4",
		"ajv": "^6.12.5",
		"ajv-errors": "^1.0.1",
		"amqp-connection-manager": "^3.2.1",
		"body-parser": "^1.19.0",
		"class-transformer": "^0.2.3",
		"class-validator": "^0.9.1",
		"crc-32": "^1.2.0",
		"fastify-accepts": "^2.0.1",
		"fastify-cors": "^4.1.0",
		"fetch-h2": "^2.5.1",
		"form-data": "^2.3.3",
		"helmet": "^3.20.0",
		"module-alias": "^2.2.0",
		"moment": "^2.28.0",
		"passport": "^0.5.0",
		"passport-jwt": "^4.0.0",
		"pg": "^8.3.2",
		"pino": "^6.13.3",
		"pino-pretty": "^7.0.1",
		"pm2": "4.4.0",
		"pm2-logrotate": "2.7.0",
		"pm2-server-monit": "3.0.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^6.6.3",
		"source-map-support": "^0.5.13",
		"ts-node": "9.0.0",
		"tsconfig-paths": "3.8.0",
		"tslib": "1.13.0",
		"typeorm": "^0.2.26",
		"typescript": "4.0.2",
		"uuid": "^3.3.2",
		"xss": "^1.0.6"
	},
	"devDependencies": {
		"@nestjs/testing": "^6.5.3",
		"@types/node": "^10.17.35",
		"@types/supertest": "^2.0.7",
		"chalk": "^4.1.0",
		"@types/jest": "^26.0.22",
		"jest": "^26.6.3",
		"prettier": "^1.15.3",
		"supertest": "^3.4.1",
		"ts-jest": "24.0.2",
		"tslint": "5.20.1"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
